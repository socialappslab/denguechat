.report-content
  = form_for([@neighborhood, report], :url => eliminate_neighborhood_report_path(@neighborhood, report), :html => {:class => "form-horizontal", :autocomplete => "off", :multipart => true}) do |f|

    .row
      .col-md-12

        - if report.is_invalid?
          .form-group.form-group-lg
            .col-sm-12
              %p.invalid-report
                = I18n.t("report.form.problem_with_verification")

        .form-group.form-group-lg
          = f.label :report, :class => "col-sm-4 control-label"
          .col-sm-8
            %p
              = report.report

        %hr

        - if report.breeding_site_id.present?
          .form-group.form-group-lg
            = f.label :breeding_site_id, :class => "col-sm-4 control-label"
            .col-sm-8
              %p
                = report.breeding_site.description

        %hr

        - if report.eliminated?
          .form-group.form-group-lg
            = f.label :elimination_method_id, :class => "col-sm-4 control-label"
            .col-sm-8
              %p
                = report.elimination_method.detailed_description

          %hr

    .row
      .col-md-12
        = render :partial => "reports/photos", :locals => {:report => report, :f => f}

        %hr
