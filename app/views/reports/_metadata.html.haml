.row
  .span9
    .row.report-metadata
      .span5
        = link_to report.reporter.first_name, user_path(report.reporter), :style => "font-weight: bold;"
        .feed-item-timestamp
          %i.fa.fa-clock-o
          = format_timestamp(report.created_at)

        - if @current_user && (@current_user == report.reporter || @current_user.coordinator?)
          = link_to neighborhood_report_path(@neighborhood, report), :id=>'user_report_delete', :confirm => I18n.t("views.alerts.confirm"), :method => :delete do
            %i.fa.fa-trash-o

      .span3{:style => "text-align: right;"}
        - if report.sms_incomplete?
          %div{style: "margin-top:3px; margin-right:10px;"}
            = I18n.t("common_terms.sms")
        - elsif report.eliminated?
          .time_expired
            = I18n.t("common_terms.eliminated")
        - elsif report.expired?
          .time_expired
            = I18n.t("common_terms.time_expired")
        - elsif report.open?
          = I18n.t("common_terms.open_for")
          .countdown.countdownHolder.timer{:style => "display: inline-block;"}
