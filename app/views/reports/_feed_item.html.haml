.user_activity_item
  .row
    .span1
      = link_to user_path(owner) do
        - if owner.profile_photo_file_name.nil?
          = image_tag("default_images/profile_default_image.png", :style => "width: 100px;")
        - else
          = image_tag(owner.profile_photo.url(:small), :style => "width: 100px;")

    .span7
      .row.feed-item-bar
        .span7
          = link_to owner.first_name, user_path(owner), :style => "font-weight: bold;"
          .feed-item-timestamp
            %i.fa.fa-clock-o
            = format_timestamp(report.created_at)

      .row{:style => "margin-bottom: 20px;"}
        .span7
          - if report.is_open?

            - report_feed_content = "Encontrou um foco"
            - report_feed_content += " @ #{report.elimination_type.downcase}" if report.elimination_type.present?
          - elsif report.is_eliminated?
            - report_feed_content = "Eliminou um foco"
            - report_feed_content += "  @ #{report.elimination_type.downcase}" if report.elimination_type.present?
          - if report_feed_content && report.complete_address.present?
            - report_feed_content += " no #{report.complete_address}"
          = report_feed_content


  .row{:style => "margin-bottom: 20px; text-align: center;"}
    .span8
      = link_to neighborhood_reports_path(report.neighborhood), :style => "display: block;" do
        - if report.is_open? && report.before_photo_file_name.present?
          = image_tag(report.before_photo.url(:thumb), :style => "width: 200px; height: 200px;")
        - elsif report.is_eliminated? && report.after_photo_file_name.present?
          = image_tag(report.after_photo.url(:thumb), :style => "width: 200px; height: 200px;")
        - else
          = image_tag("default_images/report_before_photo.png", :style => "width: 200px;")
