:javascript
  $(".selectpicker").selectpicker();
%br

.row.rp_report_people{style: "width:430px;"}
  - if report.elimination_type && report.reporter_id
    = "#{I18n.t("common_terms.marked_by")}:"
    =link_to report.reporter_name + " " + report.strftime_with(:created_at), user_path(report.reporter), :class => "user"
    %br

  - if report.isVerified == "t" && (report.verifier_id || report.resolved_verifier_id)
    = "#{I18n.t("common_terms.verified_by")}:"
    = link_to report.verifier_name + " " + report.strftime_with(:created_at), user_path(report.verifier), :class => "user"
    %br

  - elsif report.isVerified == "f" && (report.verifier_id || report.resolved_verifier_id)
    %p{:style => "color:red;font-weight:bold;margin-top:10px;"}
      = I18n.t("common_terms.problem_with_report")
    %br

  - if report.eliminator_id
    Eliminado por:
    =link_to report.eliminator_name + " " + report.strftime_with(:eliminated_at), user_path(report.eliminator), :class => "user", :style => "width:100%;"
  - else
    -if report.eliminated_at
      Eliminador por: #{report.eliminator_name + " " + report.strftime_with(:eliminated_at)}
  %br
