.report.open
  .row
    .rp_report_status.status
      - if report.expired?
        %del
          = I18n.t("common_terms.open_reports")
      - else
        = I18n.t("common_terms.open_reports")

      .rp_report_options
        = render :partial => "reports/topbar", :locals => {:report => report}

        - if report.sms_incomplete?
          .span{style: "margin-top:3px; margin-right:10px;"}
            = I18n.t("common_terms.sms")

  .row.address_row
    .span6.address
      %h4= report.report

  .row{style: "margin-top:7px;"}
    = render :partial => "reports/attributes", :locals => {:report => report}
