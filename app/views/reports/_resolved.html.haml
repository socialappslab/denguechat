.report.eliminated
  .row
    .rp_report_status.status
      .rp_report_options{:style => "margin-top:-3px;"}

        - if report.is_resolved_verified == "t"
          = image_tag 'icons/reports icon/check.png', :width => 25, :height => 25, :style => "float:right;"
        - elsif report.is_resolved_verified == "f"
          = image_tag 'icons/reports icon/x.png', :width => 25, :height => 25, :style => "float:right;"
        - else
          - if @current_user && [User::Types::VERIFIER, User::Types::ADMIN, User::Types::COORDINATOR].include?(@current_user.role)
            = link_to (image_tag 'icons/reports icon/x.png', :width => 25, :height => 25),     problem_neighborhood_reports_path(@neighborhood, :id => report.id), method: :post, :style => "float:right;"
            = link_to (image_tag 'icons/reports icon/check.png', :width => 25, :height => 25), verify_neighborhood_reports_path(@neighborhood, :id => report.id), method: :post, :style => "float:right;"

      .span{:style => "float:right;"}
        Eliminado

  .row
    .span6{:style => "margin-top:10px;"}
      %h4= report.complete_address
    .span2
      - if report.location.latitude and report.location.longitude
        = link_to I18n.t("common_terms.find_on_map"), "#", id: "mapa_#{report.id}", class: "mapa", data: { latitude: "#{report.location.latitude}", longitude: "#{report.location.longitude}"}, style: "margin-top:5px;float:right;border:1px solid gray;margin-right:-6px;padding:2px;"

  .row
    .span2.rp_before_photo
      =image_tag report.before_photo(:medium), :style => "margin-bottom:10px;"

      =image_tag report.after_photo(:medium)

    .span6
      .row.rp_report_people.span6

        %h3{style: "font-weight:bold;"}Descrição da localização:
        = report.report

        %h3{:style => "font-weight:bold;"} Tipo de foco:
        = report.elimination_type

        %h3{:style => "font-weight:bold;"} Método de eliminação:
        = report.elimination_method
        %br
        %br

        - if report.reporter
          Marcado por:
          =link_to report.reporter_name + " " + report.strftime_with(:created_at), user_path(report.reporter), :class => "user", :style => "width:100%;"
        - else
          Marcado por: #{report.reporter_name + " " + report.strftime_with(:created_at)}
        %br

        - if report.eliminator_id
          Eliminado por:
          =link_to report.eliminator_name + " " + report.strftime_with(:eliminated_at), user_path(report.eliminator), :class => "user", :style => "width:100%;"
        - else
          -if report.eliminated_at
            Eliminador por: #{report.eliminator_name + " " + report.strftime_with(:eliminated_at)}
        %br

        - if report.is_resolved_verified == "t" and report.resolved_verifier_id
          Verificado por:
          = link_to report.verifier_name + " " + report.strftime_with(:resolved_verified_at), user_path(report.resolved_verifier), :class => "user"
        - elsif report.is_resolved_verified == "f" and report.resolved_verifier_id
          %p{:style => "color:red;font-weight:bold;margin-top:10px;width:410px;"}
            Problema no foco marcado. Entre em contato conosco.

  .row
    .rp_report_options
      - if @current_user && @current_user.admin?
        =link_to (image_tag 'icons/reports icon/delete2.png', :id=>'user_report_delete'), neighborhood_report_path(@neighborhood, report), :confirm => "Você tem certeza?", :method => :delete, :style => "margin-right:5px;"
