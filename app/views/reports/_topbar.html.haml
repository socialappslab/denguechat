.rp_report_status.status
  .span2
    - if @current_user
      - is_liked = report.likes.map(&:user_id).include?(@current_user.id)

      = link_to like_neighborhood_report_path(@neighborhood, report), :class => "likes_button", "data-path" => like_neighborhood_report_path(@neighborhood, report), "data-likes_count" => report.likes.count do
        %i.fa.fa-thumbs-up.like-icon{:style => "color: #{is_liked ? '#3498db' : '#bdc3c7'}"}
        %span.likes_text{:style => "color: white;"}
          = report.likes.count

  .span6
    .rp_report_options
      - if @current_user
        - if report.open?
          - if @current_user.coordinator? || report.reporter == @current_user
            = link_to neighborhood_report_path(@neighborhood, report), :id=>'user_report_delete', :confirm => I18n.t("views.alerts.confirm"), :method => :delete, :style => "margin-right:10px; margin-left:10px; float: right; font-size: 20px;" do
              %i.fa.fa-trash-o.fa-2
        - elsif report.eliminated?
          - if @current_user.coordinator?
            = link_to neighborhood_report_path(@neighborhood, report), :id=>'user_report_delete', :confirm => I18n.t("views.alerts.confirm"), :method => :delete, :style => "margin-right:10px; margin-left:10px; float: right; font-size: 20px;" do
              %i.fa.fa-trash-o.fa-2
        - else
          - if @current_user.coordinator? || report.reporter == @current_user
            = link_to neighborhood_report_path(@neighborhood, report), :id=>'user_report_delete', :confirm => I18n.t("views.alerts.confirm"), :method => :delete, :style => "margin-right:10px; margin-left:10px; float: right; font-size: 20px;" do
              %i.fa.fa-trash-o.fa-2

        - if report.is_valid?
          %i.fa.fa-check.fa-2{:style => "margin-right:10px; margin-left:10px; float: right; font-size: 20px;"}
        - elsif report.is_invalid?
          %i.fa.fa-times.fa-2{:style => "margin-right:10px; margin-left:10px; float: right; font-size: 20px;"}
        - else
          - if @current_user.verifier?
            = link_to problem_neighborhood_reports_path(@neighborhood, :id => report.id), method: :post, :style => "margin-right:10px; margin-left:10px; float:right; font-size: 20px;" do
              %i.fa.fa-times.fa-2
            = link_to verify_neighborhood_reports_path(@neighborhood, :id => report.id), method: :post, :style => "margin-right:10px; margin-left:10px; float:right; font-size: 20px;" do
              %i.fa.fa-check.fa-2


      - if report.sms_incomplete?
        .span{style: "margin-top:3px; margin-right:10px;"}
          = I18n.t("common_terms.sms")
      - elsif report.eliminated?
        .span.time_expired
          = I18n.t("common_terms.eliminated")
      - elsif report.expired?
        .span.time_expired
          = I18n.t("common_terms.time_expired")
      - elsif report.open?
        .countdown.countdownHolder.timer
        .span.countdown_label
          = I18n.t("common_terms.open_for")
