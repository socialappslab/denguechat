.reset_password_form.offset1{:style => "margin-top:20px;"}

  %h1
    = I18n.t("views.password_resets.title")

  %ul
    = form_tag password_resets_path, :method => :post do
      %li= label_tag :email, I18n.t("views.password_resets.enter_email"), style: "margin-top:20px;"
      %li= text_field_tag :email
      %li= submit_tag I18n.t("views.buttons.submit"), :class => "btn btn-success"
