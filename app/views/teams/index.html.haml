          -#   .span2{:style => "display: table; height: 75px;"}
          -#     %span{:style => "display: table-cell; vertical-align: bottom;"}
          -#       %span{:style => " font-size: 30px;"}
          -#         = team.users.count
          -#       = I18n.t("activerecord.models.user", :count => 2)
        .span2
          %div{:style => "display: table; height: 100px;"}
            %div{:style => "display: table-cell; vertical-align: middle;"}
              = link_to "+ " + I18n.t("common_terms.join"), root_path, :class => "btn btn-info btn-large", :style => "float: right;"
      %hr{:style => "border: 1px solid #e5e6e9; border-bottom: none;"}
