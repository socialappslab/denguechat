!!!
%html{:itemscope => "", :itemtype => "http://schema.org/Product", :lang => "en" }
  %head
    %title
      DengueChat | Dashboard
    = render :partial => "shared/head"

  %body
    #wrap
      .master-detail-split-view
        = render :partial => "shared/master_detail_navigation_bar"

        .content-view
          .row
            .col-md-2.master
              = render :partial => "shared/master_detail_navigation_menu"
            .col-md-10.detail
              - if content_for :dashboard_content
                = yield :dashboard_content
      #push

    %footer.bs-docs-footer{:role => "contentinfo"}
      .container
        .row
          .col-md-1
            = link_to I18n.t("views.denguechat_engage"), root_path, :class => "btn btn-default"
          .col-md-9
            %p
              = link_to I18n.t("views.footer.creator"), credit_path
            %p
              2014-2015 Â© Regents of the University of California




      / Scripts
      // NOTE: We *cannot* load jquery asynchronously since the application.js file
      // depends on the namespace.
      = javascript_include_tag "application"
      %script{:src => "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js", :async => true}

      / Yield page-specific scripts.
      = yield :scripts
      = stylesheet_link_tag "dashboard"
