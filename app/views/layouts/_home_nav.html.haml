#home_nav_bar
  .row
    -# Logo
    - if @current_user
      = link_to image_tag("home_images/logo.png", :id => "logo", :style=> "z-index:3;"), user_path(@current_user)
    - else
      = link_to image_tag("home_images/logo.png", :id => "logo", :style=> "z-index:3;"), root_path


    -# Education dropdown

    .main_nav_button.span4.offset3
      .dropdown-toggle{ :data => {:toggle=>"dropdown"} }
        %h1{style: 'color:black;'}
          = I18n.t("home_navigation.education.title")
          %i.fa.fa-caret-down
        %h3
          = I18n.t("home_navigation.education.description")

      %ul.dropdown-menu
        %li
          = link_to I18n.t("views.education.sections.circle_of_life"), education_path + '#ciclo'
        %li
          = link_to I18n.t("views.education.sections.solution"), education_path + '#alimentacao'
        %li
          = link_to I18n.t("views.education.sections.reproduction"), education_path + '#desova'
        %li
          = link_to I18n.t("views.education.sections.eggs"), education_path + '#ovos'
        %li
          = link_to I18n.t("views.education.sections.infographic"), education_path + '#acesse'
        %li
          = link_to I18n.t("views.education.sections.origin"), education_path + '#aedes'
        %li
          = link_to I18n.t("views.education.sections.name"), education_path + '#nomeA'
        %li
          = link_to I18n.t("views.education.sections.ability"), education_path + '#infectar'
        %li
          = link_to I18n.t("views.education.sections.why"), education_path + '#pica'
        %li
          = link_to I18n.t("views.education.sections.reintroduction"), education_path + '#verdade'
        %li
          = link_to I18n.t("views.education.sections.where"), education_path + '#ocorre'



    -# How-to dropdown
    .main_nav_button.span2
      = link_to howto_path do
        %h1{style: 'color:black;'}
          = I18n.t("home_navigation.howto.title")
        %h3{style: "margin-left:-5px;"}
          = I18n.t("home_navigation.howto.description")
    .main_nav_button.span2
      = link_to prizes_path do
        %h1{style: 'color:black;'}
          = I18n.t("home_navigation.prizes.title")
        %h3
          = I18n.t("home_navigation.prizes.description")

    - if @current_user.nil?
      .span1
        = render :partial => "home/flags"
      .span5
        #login

          = form_tag(session_path, :style => "margin-bottom: 0px;") do
            %ul
              %li= text_field_tag :email, nil, :placeholder => "Email"
              %li= password_field_tag :password, nil, :placeholder => I18n.t("activerecord.attributes.user.password")
              %li= submit_tag "Entrar", :class => "btn btn-success"
            = link_to I18n.t("login_form.forgot_password"), new_password_reset_path, :id => "forgot_password", :class => "logout_button"


    - else
      .span2
        = render :partial => "home/flags"
      .span5
        #logged_in{:style => "float:right;"}
          %h3{:style => "display: inline-block;"}
            = I18n.t("login_form.greeting", :name => @current_user.first_name)

          = link_to logout_path, :class => "logout_button", :style => "font-size: 17px; line-height: 30px;" do
            %i.fa.fa-2.fa-sign-out
            = I18n.t("login_form.logout")
