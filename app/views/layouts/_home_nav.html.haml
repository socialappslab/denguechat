.row{:style => "background-color: #408bca; height: 75px;"}

  -# Logo
  - if @current_user
    = link_to image_tag("home_images/logo.png", :id => "logo", :style=> "z-index:3;"), user_path(@current_user)
  - else
    = link_to image_tag("home_images/logo.png", :id => "logo", :style=> "z-index:3;"), root_path


  -# Education dropdown
  .span3.offset3
    .main_nav_button
      .dropdown-toggle{ :data => {:toggle=>"dropdown"} }
        %a{:href => "#"}
          %h1{style: 'color:black;'}
            = I18n.t("home_navigation.education.title")
            %i.fa.fa-caret-down
          %p{:style => "font-size: 16px; color: white;"}
            = I18n.t("home_navigation.education.description")

      %ul.dropdown-menu
        - if I18n.locale.to_s == User::Locales::SPANISH
          = render :partial => "home/education_dropdown_es"
        - else
          = render :partial => "home/education_dropdown_pt"



  -# How-to dropdown
  .span3
    .main_nav_button
      .dropdown-toggle{ :data => {:toggle=>"dropdown"} }
        %a{:href => "#"}
          %h1{style: 'color:black;'}
            = I18n.t("home_navigation.howto.title")
            %i.fa.fa-caret-down
          %p{:style => "font-size: 16px; margin-left: -5px; color: white;"}
            = I18n.t("home_navigation.howto.description")

      %ul.dropdown-menu
        - DocumentationSection.order("order_id ASC").each do |section|
          %li
            = link_to section.title, howto_path + "##{section.html_id_tag}"

  .span2
    .main_nav_button
      = link_to prizes_path do
        %h1{style: 'color:black;'}
          = I18n.t("home_navigation.prizes.title")
        %p{:style => "font-size: 16px; color: white;"}
          = I18n.t("attributes.points")

  - if @current_user.nil?
    -# .span1
    -#   = render :partial => "home/flags"
    .span7.pull-right

      #login
        = form_tag(session_path, :style => "margin-bottom: 0px;") do
          %ul
            %li
              = text_field_tag :username, nil, :placeholder => I18n.t("views.home.login.username"), :style => "width:210px;"
            %li
              = password_field_tag :password, nil, :placeholder => I18n.t("activerecord.attributes.user.password"), :style => "width:150px;"
            %li
              = submit_tag "Entrar", :class => "btn btn-success"

          = link_to I18n.t("login_form.forgot_password"), new_password_reset_path, :id => "forgot_password", :class => "logout_button", :style => "display: inline-block; width: 365px;"

          - if I18n.locale.to_s == User::Locales::SPANISH
            = link_to I18n.t("common_terms.portuguese"), "?locale=pt", :style => "display: inline-block; text-align: right;"
          - else
            = link_to I18n.t("common_terms.spanish"), "?locale=es", :style => "display: inline-block; text-align: right;"


  - else
    .span3{:style => "text-align: center;"}
      - if @message_notifications.blank?
        .main_nav_button
          = link_to user_conversations_path(@current_user), :style => "font-size: 36px; color: white; display: block; margin-top: 15px;" do
            %i.fa.fa-envelope
      - else
        .main_nav_button{:style => "margin-top: 0px;"}
          %div.badge.badge-important{:style => "width: 25px; position: relative; top: 10; left: 25"}
            = @message_notifications.count
          = link_to  user_conversations_path(@current_user), :style => "font-size: 36px; color: white; display: block; margin-top: 0px;" do
            %i.fa.fa-envelope

    -# .span2
    -#   = render :partial => "home/flags"
    .span4.pull-right
      #logged_in{:style => "float:right;"}
        %p{:style => "display: inline-block; color: white;"}
          = I18n.t("login_form.greeting", :name => @current_user.display_name )

        = link_to logout_path, :class => "logout_button", :style => "line-height: 30px;" do
          %i.fa.fa-2.fa-sign-out
          = I18n.t("login_form.logout")
