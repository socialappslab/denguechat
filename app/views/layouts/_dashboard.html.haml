/*---------------------------------------------------------------------------*/

.row#dashboard_bar
  .col-xs-12.dashboard-item.pull-right.visible-xs.visible-sm.hidden-md.hidden-lg
    .dropdown
      %button.btn.btn-default.btn-lg.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        %i.fa.fa-bars
        Menu
      %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
        %li
          = link_to city_path(@current_user.city) do
            %i.fa.fa-globe
            = I18n.t("dashboard.my_city")
        %li
          = link_to neighborhood_path(@current_user.neighborhood) do
            %i.fa.fa-users.fa-2
            = I18n.t("dashboard.my_community")
        %li
          = link_to teams_path do
            %i.fa.fa-futbol-o
            = I18n.t("activerecord.models.team", :count => 3)
        %li
          = link_to neighborhood_reports_path(@current_user.neighborhood) do
            %i.fa.fa-map-marker
            = I18n.t("dashboard.reports")
        %li
          = link_to csv_reports_path do
            %i.fa.fa-table
            CSV
        %li
          = link_to logout_path do
            %i.fa.fa-2.fa-sign-out
            = I18n.t("login_form.logout")


  .col-md-2.col-md-offset-1.dashboard-item.hidden-xs.hidden-sm
    - header_styling = current_page?(:controller => "cities", :action => "show") ? "font-weight:bold;" : ""
    = link_to city_path(@current_user.city), :style => header_styling do
      %i.fa.fa-globe
      = I18n.t("dashboard.my_city")

  .col-md-2.dashboard-item.hidden-xs.hidden-sm
    - header_styling = current_page?(:controller => "neighborhoods", :action => "show") ? "font-weight:bold;" : ""
    = link_to neighborhood_path(@current_user.neighborhood), :style => header_styling do
      %i.fa.fa-users.fa-2
      = I18n.t("dashboard.my_community")

  .col-md-2.dashboard-item.hidden-xs.hidden-sm
    - header_styling = current_page?(:controller => "teams", :action => "index") ? "font-weight:bold; text-align: center;" : ""
    = link_to teams_path, :style => header_styling do
      %i.fa.fa-futbol-o
      = I18n.t("activerecord.models.team", :count => 3)

  .col-md-2.dashboard-item.hidden-xs.hidden-sm
    - header_styling = current_page?(:controller => "reports", :action => "index") ? "font-weight:bold; text-align: center;" : ""
    = link_to neighborhood_reports_path(@current_user.neighborhood), :style => header_styling do
      %i.fa.fa-map-marker
      = I18n.t("dashboard.reports")

  .col-md-1.dashboard-item.hidden-xs.hidden-sm
    - header_styling = current_page?(:controller => "csv_reports", :action => "index") ? "font-weight:bold; text-align: center;" : ""
    = link_to csv_reports_path, :style => header_styling do
      %i.fa.fa-table
      CSV

  .col-md-1.dashboard-item.hidden-xs.hidden-sm
    - if @notifications.blank?
      %a{:href => "#"}
        %i.fa.fa-bell
        &nbsp;
    - else
      .dropdown-toggle{ :data => {:toggle=>"dropdown"} }
        %a{:href => "#"}
          %i.fa.fa-bell
          %span.label.label-danger
            = @notifications.count if @notifications.present?
          &nbsp;

      = render :partial => "shared/notifications"



  .col-md-1.dashboard-item.pull-right.hidden-xs.hidden-sm
    = image_tag(asset_path(@current_user.picture), :class => "img-circle", :style => "height: 50px; width: 50px;", :data => {:toggle=>"dropdown"})
    %ul.dropdown-menu{"style" => "right: 50%;"}
      %li
        = link_to user_path(@current_user) do
          %i.fa.fa-user.fa-2
          = I18n.t("dashboard.my_profile")
      %li
        = link_to edit_user_path(@current_user) do
          %i.fa.fa-gear.fa-2
          = I18n.t("common_terms.configuration")
      %li
        = link_to logout_path do
          %i.fa.fa-2.fa-sign-out
          = I18n.t("login_form.logout")




- if @breadcrumbs.present?
  %ol.breadcrumb
    - @breadcrumbs.each do |bc|
      %li{:class => "#{request.path == bc[:path] ? 'active' : ''}"}
        = link_to bc[:name], bc[:path]
