- if @current_user.nil?
  #login
    #login_error
      = flash[:alert]

    = form_tag session_path do
      %ul
        %li= text_field_tag :email, nil, :placeholder => "E-mail"
        %li= password_field_tag :password, nil, :placeholder => "Senha"
        %li= submit_tag "Entrar"
      = link_to "Esqueceu sua senha?", new_password_reset_path, :id => "forgot_password", :class => "logout_button"


- else
  #logged_in
    .span3{style: "margin-top:1px;text-align:right;"}
      %h3
        OlÃ¡ #{@current_user.display_name}!
    .span2
      = link_to logout_path, :class => "logout_button", :style => "font-size: 17px; line-height: 30px;" do
        /= image_tag("icons/logout4.png")
        %i.fa.fa-2.fa-sign-out
        Sair
