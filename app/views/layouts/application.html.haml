%html{"ng-app" => "dengueChatApp"}

  /-----------------------------------------------------------------------------

  %head
    / SEO-related optimizations
    %meta{ :charset => "utf-8" }
    %meta{ "http-equiv" => "Content-Type",    :content => "text/html" }
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge" }
    %meta{ :name => "description", :content => I18n.t("views.application.head.description") }
    %title
      = I18n.t("views.app")

    // Load the stylesheets.
    = stylesheet_link_tag "application"

    / Fonts
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet"}
    %link{:href => "https://fonts.googleapis.com/css?family=Lato:300,400", :rel => "stylesheet", :type => "text/css"}

    / Custom head definitions
    = yield :head if content_for(:head)

    / OpenGraph metadata
    %meta{:property => "og:image",     :content => "https://fbcdn-photos-e-a.akamaihd.net/hphotos-ak-ash3/t39.2081-0/851537_1423643271237394_463588204_n.png"}
    %meta{:property => "og:site_name", :content => "#{I18n.t("views.app")}"}
    %meta{:property => "og:type",      :content => "website"}

    = csrf_meta_tags

  /-----------------------------------------------------------------------------

  %body
    #container
      = link_to logo_image, (@current_user.present? ? user_path(@current_user) : root_path)


      - if @current_user.present?
        = render "layouts/dashboard"
      - else
        = render "layouts/home_nav"

      - if !current_page?(root_url)
        .push_down
      = yield

  /-----------------------------------------------------------------------------

  %footer.bs-docs-footer{:role => "contentinfo"}
    .container
      %p
        = link_to I18n.t("views.footer.creator"), credit_path
      %p
        2014-2015 © Regents of the University of California
      %ul.bs-docs-footer-links.muted
        %li
          = link_to I18n.t("home_navigation.education.title_and_description"), education_path
        %li ·
        %li
          = link_to I18n.t("home_navigation.howto.title_and_description"), howto_path
        %li ·
        %li
          = link_to I18n.t("home_navigation.prizes.title_and_description"), prizes_path
        %li ·
        %li
          = link_to I18n.t("views.footer.code_of_conduct"), manual_path
        %li ·
        %li
          = link_to I18n.t("views.footer.faq"), faq_path

        %li ·
        %li
          = link_to I18n.t("views.footer.contact"), new_feedback_path
        %li ·
        %li
          = link_to I18n.t("views.footer.about"), about_path


    / Scripts
    // NOTE: We *cannot* load jquery asynchronously since the application.js file
    // depends on the namespace.
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    = javascript_include_tag "application"
    %script{:src => "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js", :async => true}

    -# %script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"}
    -# %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-route.min.js"}
    = javascript_include_tag "app/app"
    = javascript_include_tag "app/controllers/post_controller"


    / Yield page-specific scripts.
    = yield :scripts
