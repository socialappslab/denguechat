.col-md-4.prizes.redeemed
	.status.redeemed
		.name{style: "height:20px;"}
			= link_to redeemed.sponsor_name, "/sponsors/#{redeemed.user.id}"
		.points
			#{redeemed.cost} pontos
	.prize_content
		- if redeemed.prize_photo_file_name.nil?
			= image_tag("default_images/report_before_photo.png", :class => "prizes")
		- else
			= image_tag(redeemed.prize_photo.url(:large), :class => "prizes")
		.description
			= truncate(redeemed.prize_name, length: 35)
		.stock

			- if redeemed.stock == 0
				Estoque: #{redeemed.stock}
			- else
				Prazo expirado
