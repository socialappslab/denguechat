- content_for :dashboard_content do
  .container-fluid{"ng-controller" => "heatmapCtrl", "neighborhood" => @neighborhood.to_json, "style" => "margin-top: 20px;"}
    .row
      .col-md-12
        #map_div{"style" => "height: auto;"}
          #loading
            .fa.fa-refresh.fa-spin
          #gmap{"style" => "height: 600px !important;"}

/------------------------------------------------------------------------------

- content_for :scripts do
  = javascript_include_tag "google/marker-clusterer"

  :javascript
    var openLocations       = #{@open_locations.to_json(:only => [:latitude, :longitude])}
    var communityLatitude   = #{@neighborhood.latitude}
    var communityLongitude  = #{@neighborhood.longitude}
