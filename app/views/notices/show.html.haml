/------------------------------------------------------------------------------

= render :partial => "shared/flashes"

/------------------------------------------------------------------------------

= render :partial => "shared/title_banner", :locals => default_navigation_hash.merge(:title => @notice.title, :parent_navigation_path => neighborhood_path(@notice.neighborhood), :parent_navigation_title => @notice.neighborhood.name)


.row
	.col-md-4.col-md-offset-3.neighborhood_news_thumb{:style => "width:250px;height:250px;margin-top:10px;"}
		= image_tag(asset_path(@notice.picture(:large)))

	.col-md-6

		%h2 Instituição
		%p
			= @notice.institution_name

		%h2 Descrição da atividade
		%p
			= simple_format(@notice.description)

		%h2 Endereço da atividade
		%p
			= @notice.location

		%h2 Data da atividade
		%p
			= format_timestamp(@notice.date)

- if @current_user && @current_user.coordinator?
	.row.col-md-offset-1
		= link_to "Editar", edit_notice_path(@notice)
		= link_to "Deletar", @notice, method: :delete, data: { :confirm => I18n.t("views.alerts.confirm") }
