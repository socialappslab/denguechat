<%= form_for(@notice) do |f| %>
  <% if @notice.errors.any? %>
    <div id="error_explanation">
      <% if @notice.errors.count == 1 %>
        <h2><%= pluralize(@notice.errors.count, "erro") %> impediu que a notícias da comunidade fosse enviada:</h2>
      <% else %>
        <h2><%= pluralize(@notice.errors.count, "erro") %> impediram que a notícias da comunidade fosse enviada:</h2>
      <% end %>

      <ul>
      <% @notice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :neighborhood_id, "Comunidade" %>
    <%= f.select :neighborhood_id, @neighborhoods %>
  </div>
  <div class="field">
    <%= f.label :title, "Título da atividade (máx 60 caracteres)" %>
    <%= f.text_field :title, :style => "width:400px;", :maxlength => 60 %>
  </div>
  <div class="field">
    <%= f.label :institution_name, "Instituição (máx 60 caracteres)"%>
    <%= f.text_field :institution_name, :style => "width:400px;", :maxlength => 60 %>
  </div>
  <div class="field">
    <%= f.label :summary, "Descrição resumida (máx 150 caracteres)" %>
    <%= f.text_area :summary, :maxlength => 150, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :description, "Descrição da atividade (máx 900 caracteres)" %>
    <%= f.text_area :description, :maxlength => 900 %>
  </div>
  <div class="field">
    <%= f.label :location, "Endereço da atividade (máx 60 caracteres)" %>
    <%= f.text_field :location, :style => "width:600px;", :maxlength => 60 %>
  </div>
  <div class="field">
    <%= f.label :date, "Data da atividade" %>
    <%= f.date_select :date, :order => [:day, :month, :year], :use_month_names => ["janeiro", "fevereiro", "março", "abril", "maio", "junho", "julho", "agosto", "setembro", "outubro", "novembro", "dezembro"] %>
  </div>

  <div class="field">
    <%= f.label :date, "Hora da atividade" %>
    <%= f.time_select :date, :ignore_date => true %>
  </div>

  <div class="field">
    <%= f.label :photo, "Foto" %>
    <%= f.file_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit "Cadastrar notícia" %>
  </div>
<% end %>
