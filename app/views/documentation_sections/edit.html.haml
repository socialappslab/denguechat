= render :partial => "shared/flashes"

.row
  .span12.offset1
    = render :partial => "shared/form_errors", :locals => {:item => @section}
    %h1 Completar o foco
    = form_for @section do |f|
      = f.label :title
      = f.text_field :title
      = f.label :content
      = f.text_area :content
      = f.submit "Enviar!"

    %p
      - if @section.editor.present?
        = "Nota: Última edicação às #{time_ago_in_words(@section.updated_at)} atrás por #{@section.editor.full_name}"
      - else
        = "Nota: Essa seção ainda não foi editada"
