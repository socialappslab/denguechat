.chart-filters
  = form_tag time_series_settings_path, :method => "POST", :id => "chart-filters" do
    %table.table.table-bordered
      %tbody
        %tr.text-center
          %td{:colspan => 2}
            = I18n.t("common_terms.filter_by")

        %tr
          %td{:colspan => 2}
            .radio
              = label_tag do
                = radio_button_tag "chart[percentages]", "cumulative", chart_cookies.blank? || [nil, "cumulative"].include?(chart_cookies["percentages"])
                = I18n.t("views.statistics.chart.filters.percentages.cumulative")

            .radio
              = label_tag do
                = radio_button_tag "chart[percentages]", "daily", chart_cookies["percentages"] == "daily"
                = I18n.t("views.statistics.chart.filters.percentages.daily")


        %tr
          %td
            .checkbox
              = label_tag do
                = check_box_tag "chart[positive]", 1, chart_cookies.blank? || chart_cookies["positive"]
                = I18n.t('views.statistics.chart.percent_of_positive_sites')

            .checkbox
              = label_tag do
                = check_box_tag "chart[potential]", 1, chart_cookies.blank? || chart_cookies["potential"]
                = I18n.t('views.statistics.chart.percent_of_potential_sites')

            .checkbox
              = label_tag do
                = check_box_tag "chart[negative]", 1, chart_cookies.blank? || chart_cookies["negative"]
                = I18n.t('views.statistics.chart.percent_of_negative_sites')

          %td#timeframe-filter
            - [1, 3, 6].each do |month|
              .radio
                = label_tag do
                  = radio_button_tag "chart[timeframe]", month.to_s, (chart_cookies.blank? && month == 3) || chart_cookies["timeframe"] == month.to_s
                  = I18n.t("views.statistics.chart.filters.months", :count => month)

            .radio
              = label_tag do
                = radio_button_tag "chart[timeframe]", "-1", chart_cookies["timeframe"] == "-1"
                = I18n.t("views.statistics.chart.filters.all_time")
        %tr
          %td{:colspan => 2}
            = submit_tag I18n.t("common_terms.filter"), :class => "btn btn-primary btn-lg col-md-4 col-md-offset-4"
