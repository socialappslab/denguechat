#user_recent_activity
  #user_reports.span9
    - if @news_feed.blank?
      %p{:style => "font-size: 20px; line-height: 30px; text-align: center;"}
        = I18n.t("common_terms.no_activity")
    - else
      - for item in @news_feed
        - if item.is_a? Post
          = render :partial => 'users/feed_item', :locals => {:post => item, :owner => item.user}
        - elsif item.is_a?(Report) && item.is_eliminated? && item.is_public?
          = render :partial => "reports/feed_item", :locals => {:report => item, :owner => item.eliminator}
        - elsif item.is_a?(Report) && item.is_open? && item.is_public?
          = render :partial => "reports/feed_item", :locals => {:report => item, :owner => item.reporter}
        - elsif item.is_a? Notice
          = render :partial => 'notices/feed_item', :locals => {:notice => item}
