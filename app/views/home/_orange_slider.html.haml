- if @current_user
  #orange_border 
    %a{:href => 'javascript:$("#orange_toggle").collapse("show");', :data=>{ :toggle=>"collapse", :target=>"#orange_toggle"}, :id => 'orange_pull_down'}
      = image_tag("pulldown/splash_pulldown_inactive.png", :id => "orange_toggle_pic")
      = image_tag("pulldown/splash_pulldown_rollover.png", :style => "display:none;", :id => "orange_toggle_pic_active")
  #orange_toggle.collapse
    #orange_slider{:style => "background-image:none;background-color:#ff6600;height:500px;"}  
      .row
        #top.row
          #orange_bg_graphic
            .video.span11{:style => "margin-top:30px;margin-left:225px;"}
              %iframe{:allowscriptaccess => "always", :allowFullScreen => "true", :frameborder => "0", :height => "400", :width => "600", :src => "http://www.youtube.com/embed/o6IY0NjdmZc", :style => "text-align:center;"}
          .span4            
            #news_pane
              
    .row{:style => "height:25px;"}
      #orange_pull_up.span1{:style => "float:right;"}
        %a{:href => 'javascript:$("#orange_toggle").collapse("hide");', :data=>{:toggle=>"collapse", :target=>"#orange_toggle"}}
          = image_tag("pulldown/splash_pulldown_active.png")  
- else
  #orange_slider    
    .row
      #top.row
        #orange_bg_graphic
          .row
            .offset5
              = link_to image_tag('translated/videoplayer_button.png', :id => 'play_button'), "http://youtu.be/o6IY0NjdmZc", :target => "_blank"
              #sms_button{style: "margin-top: 20px;margin-left: 20px;"}
                %button{style: "width:100px;height:60px;background-color:green;font-size:18px;line-height:22px;", id: "redetrel_button1"}
                  SMS Grátis!
                :javascript
                  $("#redetrel_button1").click(function() {
                    location.href = "sponsors/3";
                  });
        .span4.offset8{style: "width:235px; margin-right:15px;"}
          %h2
            Use o seu celular para eliminar mosquitos – participe do Dengue Torpedo e ganhe prêmios!
                
        .span5
          #register_pane
            = render "home/register_form"
