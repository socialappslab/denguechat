= render :partial => "shared/flashes"

.row
  .span15.offset1
    %h1{style: "margin-left:10px;"}
      MANUAL DENGUE TORPEDO
    %br
    %h2 Sum√°rio
    %ul{style: "list-style-type:circle; margin-left:30px;"}
      - @sections.each do |ds|
        %li
          = link_to ds.title, "##{ds.html_id_tag}"

    %br
    .accordion#accordion1
      - @sections.each do |ds|
        .accordion-group
          .accordion-heading{style: "padding:10px;", id: "#{ds.html_id_tag}"}
            .row
              .span8
                %h1{style: "color: black;"}
                  = ds.title
              .span6{style: "text-align: right;"}
                - if @current_user && [User::Types::ADMIN, User::Types::COORDINATOR].include?(@current_user.role)
                  = link_to "Edit", edit_documentation_section_path(ds)
          #cadastrar.accordion-body
            .accordion-inner{style: "padding: 9px 25px;"}
              = ds.content.gsub(" ", "&nbsp;").gsub("\n",'<br />').html_safe
