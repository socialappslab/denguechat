#register{:style => "margin-left: 40px;"}
  %ul
    = form_for(@user, html: {name: "registration_form", :class => "form-horizontal" }) do |f|

      .control-group{:style => "margin-bottom: 5px;"}
        = f.label :username, :class => "control-label", :style => "font-size: 12px; width: 160px;"
        .controls{:style => "margin-left: 180px;"}
          = f.text_field :username,  :style => "width: 100%;"


      .control-group{:style => "margin-bottom: 5px;"}
        = f.label :first_name, :class => "control-label", :style => "font-size: 12px; width: 160px;"
        .controls{:style => "margin-left: 180px;"}
          = f.text_field :first_name,  :style => "width: 100%;"


      .control-group{:style => "margin-bottom: 5px;"}
        = f.label :last_name, :class => "control-label", :style => "font-size: 12px; width: 160px;"
        .controls{:style => "margin-left: 180px;"}
          = f.text_field :last_name,  :style => "width: 100%;"


      .control-group{:style => "margin-bottom: 5px;"}
        = f.label :password, :class => "control-label", :style => "font-size: 12px; width: 160px;"
        .controls{:style => "margin-left: 180px;"}
          = f.password_field :password,  :style => "width: 100%;"


      .control-group{:style => "margin-bottom: 5px;"}
        = f.label :password_confirmation, :class => "control-label", :style => "font-size: 12px; padding-top: 0px; margin-bottom: 0px; width: 160px;"
        .controls{:style => "margin-left: 180px;"}
          = f.password_field :password_confirmation,  :style => "width: 100%;"


      .control-group{:style => "margin-bottom: 10px;"}
        = f.label :neighborhood_id, :class => "control-label", :style => "font-size: 12px; width: 160px;"
        .controls{:style => "margin-left: 180px;"}
          = f.select :neighborhood_id, @searchable_neighborhoods, { :prompt => "" }, :style => "width: 100%;"

      .control-group{:style => "margin-bottom: 10px;"}
        .controls{:style => "margin-left: 180px;"}
          = f.submit I18n.t("common_terms.register"), :class => "btn btn-success btn-block btn-large"
