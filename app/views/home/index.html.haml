/------------------------------------------------------------------------------
= render :partial => "shared/flashes"


.landing-page-banner
  = render :partial => "orange_slider"

.container-silver{:style => "height: 300px;"}
  .row{:style => "margin-top: 30px;"}
    .col-md-3.col-md-offset-1{:style => "text-align: center;"}
      %i.fa.fa-comments{:style => "font-size: 84px;"}

      %h2{:style => "color: #333; font-size: 16px; line-height: 25px; margin-top: 20px;"}
        = I18n.t("views.home.chat_description")

    .col-md-4{:style => "text-align: center; margin-top: 50px;"}
      = link_to I18n.t("common_terms.register"), new_user_path, :class => "btn btn-success btn-xlg"


    .col-md-3{:style => "text-align: center;"}
      %i.fa.fa-futbol-o{:style => "font-size: 84px;"}

      %h2{:style => "color: #333; font-size: 16px; line-height: 25px; margin-top: 20px;"}
        = I18n.t("views.home.teams_description")


/------------------------------------------------------------------------------

/ Render the header, along with a dropdown to other neighborhoods.
.container-white
  .row
    .col-md-12
      %h2{:style => "color: black; font-size: 32px; text-align: center; margin-top: 10px; margin-bottom: 10px;"}
        = I18n.t("views.home.cities.title")

  /------------------------------------------------------------------------------
  / Display a list of neighborhoods.

  .row{:style => "margin-top: 40px; margin-bottom: 40px;"}
    = render "home/neighborhood_list"

  .row{:style => "margin-top: 60px; margin-bottom: 40px;"}
    .col-md-12
      %p{:style => "text-align: center; font-size: 24px;"}
        = I18n.t("views.home.activity_description")


/------------------------------------------------------------------------------
/ Display a list of teams.

.container-silver
  .row
    .col-md-12
      %h2{:style => "color: black; font-size: 32px; text-align: center; margin-bottom: 20px;"}
        = I18n.t("common_terms.register")
  .row
    .col-md-4.col-md-offset-3{:style => "margin-top: 25px;"}
      = render "home/register_form"



/------------------------------------------------------------------------------

- content_for :scripts do
  = javascript_include_tag "jquery/fancybox"

  :javascript
    $(document).ready(function()
    {

      $(".fancybox-media").fancybox({
        maxWidth  : 800,
        maxHeight : 600,
        fitToView : false,
        width   : '70%',
        height    : '70%',
        autoSize  : false,
        closeClick  : false,
        openEffect  : 'none',
        closeEffect : 'none'
      });



      $("#search-neighborhoods").change(function() {
        window.location.href = $(this).val()
      });

      $(".show-more-content-link").on("click", function(eventObj)
      {
          eventObj.preventDefault()

          var hiddenContent = $(eventObj.currentTarget).parent().find("#hidden-post-content");
          hiddenContent.css("display", "inline")
          $(eventObj.currentTarget).hide()
      })
    })
