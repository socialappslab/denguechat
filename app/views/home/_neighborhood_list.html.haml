#neighborhood_list.col-md-12
  #carousel-example-captions.carousel.slide{"data-ride" => "carousel"}
    .carousel-inner.col-md-offset-1.col-md-10{:role => "listbox"}
      - @cities.each_slice(3).with_index do |cities, index|
        .item{:class => (index == 0 ? "active" : "")}
          - cities.each_with_index do |city, city_index|
            .col-md-3{:style => "margin-right: 60px; text-align: center;"}
              %div{:style => "margin-bottom: 10px; font-weight: normal;"}
                = link_to city.geographical_name, city_path(city)

              = link_to image_tag(city.photo, :style => "width: 325px; height: 325px;", :class => "img-rounded"), city_path(city)

            // Add the invitation city if this is the last index and city_index
            - if (index == @cities.each_slice(3).count - 1) && city_index == cities.count - 1
              .col-md-5
                %div{:style => "margin-bottom: 10px; font-weight: normal;"}
                  = link_to I18n.t("landing_page.community.future_community"), invitation_neighborhoods_path
                = link_to image_tag("neighborhood_default.png", :style => "width: 325px; height: 325px;"), invitation_neighborhoods_path, :class => 'neighborhood_selection_photo'


    %a.left.dt-carousel-control{"data-slide" => "prev", :href => "#carousel-example-captions", :role => "button"}
      %i.fa.fa-chevron-left
    %a.right.dt-carousel-control{"data-slide" => "next", :href => "#carousel-example-captions", :role => "button"}
      %i.fa.fa-chevron-right
