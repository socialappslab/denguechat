.offset1
	%h1 Adminstrar DT Torpedos
	%br
	%table{cellpadding: 10, border: 1, style: "text-align:center;"}
		%colgroup
			%col
			%col
			%col
			%col
			%col
			%col
			%col
		%tr
			%th Usuário
			%th Celular
			%th Operadora
			%th Pré/Pós
			%th DT Torpedos total
			%th DT Torpedos a creditar
			%th 
				%i SMS req.
		- @users.each do |user|
			%tr
				%td{style: "text-align:left"}= link_to user.display_name, "torpedos/#{user.id}"
				%td= user.phone_number.sub(/^0/, "")
				%td= user.carrier
				- if user.prepaid == true
					%td Pré
				- elsif user.prepaid == false
					%td Pós
				- else
					%td Pós
				%td= user.reports.sms.where('is_credited IS NULL OR is_credited = ?', true).count
				%td= user.reports.sms.where(is_credited: nil).count
				%td
					%i= user.carrier_requirements
