.row
  .span1.feed-item-profile-photo
    = link_to user_path(user) do
      - if user.profile_photo_file_name.nil?
        = image_tag("default_images/user_default_alt.png")
      - else
        = image_tag(user.profile_photo.url(:small))
  .span6
    .row.feed-item-bar
      .span6
        = link_to user.first_name, user_path(user), :style => "font-weight: bold;"
        .feed-item-timestamp
          %i.fa.fa-clock-o
          = format_timestamp(comment.created_at)
        - if @current_user == user
          = form_tag comment_path(comment), :method => "delete", :style => "display: inline;", "data-confirm" => I18n.t("common_terms.confirm_delete"), "data-path" => comment_path(comment), :class => "comment-delete-button" do
            = button_tag(:type => "submit", :style => "font-size: 14px; color: #333; background-color: inherit !important; padding: 0px; padding-bottom: 2px;") do
              %i.fa.fa-trash-o




    .row.feed-item-content
      .span6
        = comment.content
