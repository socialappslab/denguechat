.row
  .span1.feed-item-profile-photo
    = link_to user_path(user) do
      - if user.profile_photo_file_name.nil?
        = image_tag("default_images/user_default_alt.png")
      - else
        = image_tag(user.profile_photo.url(:small))
  .span6
    .row.feed-item-bar
      .span6
        = link_to user.first_name, user_path(user), :style => "font-weight: bold;"
        .feed-item-timestamp
          %i.fa.fa-clock-o
          = format_timestamp(comment.created_at)
        - if @current_user == user
          = link_to comment_path(comment), :confirm => I18n.t("common_terms.confirm_delete"), :class => "comment-delete-button" do
            %i.fa.fa-trash-o


    .row.feed-item-content
      .span6
        = comment.content
