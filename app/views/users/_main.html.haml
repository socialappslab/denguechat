

.row{:style => "margin-bottom: 20px;"}
  .col-md-4
    - if @user.total_points == 0
      - total_points_color = "#d9534f";
    - else
      - total_points_color = "#5cb85c";

    %h1{:style => "color: #{total_points_color}; font-size: 50px; display: inline;"}
      = @user.total_points

    %p{:style => "text-align: left; display: inline; font-size: 15px;"}
      = I18n.t("activerecord.attributes.user.total_points", :count => @user.total_points)

    - if @current_user && @current_user == @user && @redeemable_prizes.count > 0
      = link_to prizes_path, :class => "btn btn-orange btn-large profile-view-points-button" do
        = I18n.t("common_terms.exchange_points_for_prizes")

  .col-md-4.text-center
    - if @green_location_ranking.blank? || @green_location_ranking == 0
      - num_of_reports_color = "#d9534f";
    - else
      - num_of_reports_color = "#5cb85c";

    %h1{:style => "color: #{num_of_reports_color}; font-size: 50px; display: inline;"}
      = @green_location_ranking
    %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
      Casas verdes

  .col-md-4.text-right
    - if @report_count == 0
      - num_of_reports_color = "#d9534f";
    - else
      - num_of_reports_color = "#5cb85c";

    %h1{:style => "color: #{num_of_reports_color}; font-size: 50px; display: inline;"}
      = @report_count
    %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
      = I18n.t("dashboard.reports")


-# ----------------------------------------------------------------------------
%div{"ng-controller" => "DCPostListCtrl", :posts_path => api_v0_user_posts_path(@user), "usernames" => User.pluck(:username), "neighborhood_id" => @neighborhood.id}
  - if (@current_user && @user == @current_user)
    .row
      .col-md-12
        %new-post-custom

  .row
    .col-md-12
      #newsfeed
        %h1.text-center{"ng-show" => "errorMessage"}
          Algo salió mal. Por favor, intente nuevamente.

        %h1.text-center{"ng-show" => "dataLoading"}
          %i.fa.fa-refresh.fa-spin
        .feed-item-complete
          %feed-item-new{"post" => "post", "ng-repeat" => "post in posts"}
          .load-more{"ng-hide" => "noMoreData"}
            .btn.btn-info.btn-lg{"ng-click" => "loadMoreMessages()"}
              %i.fa.fa-refresh{"ng-class" => "{'fa-spin': dataLoading}"}
              Cargar más




