
%div{:style => "margin-left: 30px; margin-right: 30px;"}
  .sidebar-entity-photo
    = image_tag(@user.picture, :class => "img-rounded")
    .sidebar-entity-name
      = @user.display_name

  .row
    .span4
      - if @user == @current_user
        = link_to edit_user_path(@current_user), :style => "display: block; font-size: 15px; margin-top: 20px;" do
          %i.fa.fa-gear.fa-2
          = I18n.t("common_terms.configuration")

      - if @user == @current_user
        - house_link_text = I18n.t("dashboard.my_house")
        - community_link_text = I18n.t("dashboard.my_community") + " (#{@neighborhood.name}, #{@neighborhood.city}, #{@neighborhood.state_string_id})"
      - else
        - house_link_text = I18n.t("common_terms.their_house")
        - community_link_text = I18n.t("common_terms.their_community")

      - if @user.neighborhood
        = link_to neighborhood_path(@user.neighborhood), :style => "display: block; font-size: 15px; margin-top: 20px;" do
          %i.fa.fa-users.fa-2
          = community_link_text

  %hr{:style => "border-bottom: 1px solid #ccc;"}
  %h1{:style => "text-align: center; color: #333;"}
    = I18n.t("common_terms.my_teams").capitalize

  .row{:style => "margin-top: 20px;"}
    .span4
      = render :partial => "shared/sidebar_list", :locals => {:items => @teams}


  %hr{:style => "border-bottom: 1px solid #ccc;"}
  %h1{:style => "text-align: center; color: #333;"}
    = I18n.t("common_terms.badges").capitalize

  - if @user.total_points >= 100
    .row{:style => "text-align: center; margin-top: 20px;"}
      .span4
        = render :partial => "users/badges"

  %hr{:style => "border-bottom: 1px solid #ccc;"}
  %h1{:style => "text-align: center; color: #333;"}
    = I18n.t("common_terms.redeemed_prizes")

  - if @coupons.present?
    .row{:style => "text-align: center; margin-top: 20px;"}
      .span4
        = render :partial => "users/coupons"
