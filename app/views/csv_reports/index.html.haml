/------------------------------------------------------------------------------

= render :partial => "shared/flashes"

/------------------------------------------------------------------------------

.row{:style => "margin-bottom: 30px;"}
  .span7.offset1
    %p{:style => "margin-top: 10px;"}
      %i.fa.fa-lock
      Este es un sitio privado, sólo usted lo puede ver.


.row
  .span8.offset1
    %h1{:style => "font-size: 30px; margin-bottom: 30px;"}
      Reportes cargados en CSV
  .span5.pull-right
    = link_to new_neighborhood_csv_report_path(@neighborhood), :class => "btn btn-success btn-large", :style => "margin-bottom:20px;" do
      %i.fa.fa-file
      = I18n.t("views.buttons.upload_csv")

- if @csv_reports.present?
  .row{:style => "margin-bottom: 20px; margin-top: 20px;"}
    .span9.offset2
      %h1{:style => "color: #5cb85c; font-size: 50px; display: inline;"}
        = @clean_visits
      %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
        Casas verdes

    .span5
      %h1{:style => "color: #d9534f; font-size: 50px; display: inline;"}
        = @dirty_visits
      %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
        Casas positivas

  .row
    .span9.offset2{:style => "margin-bottom: 20px; margin-top: 20px;"}
      %h1{:style => "color: #5cb85c; font-size: 50px; display: inline;"}
        = ((@clean_visits.to_f / @total_visits) * 100).to_i.to_s + "%"
      %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
        Porcentaje de casas verdes

    .span7{:style => "margin-top: 20px; margin-bottom: 20px; "}
      %h1{:style => "color: #d9534f; font-size: 50px; display: inline;"}
        = ((@dirty_visits.to_f / @total_visits) * 100).to_i.to_s + "%"
      %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
        Porcentaje de casas positivas



  .row{:style => "margin-top: 20px;"}
    .span16.offset1
      %table.table.table-bordered
        %thead
          %th
            Lugar
          %th
            Fecha
          %th
            Número de criaderos marcados
          %th
            Descargar
        - @csv_reports.each do |type|
          %tr
            %td{:style => "font-weight: bold;"}
              = type.location.address
            %td
              = type.created_at.strftime("%Y-%m-%d")
            %td
              = type.reports.count
            %td
              = link_to type.csv_file_name, type.csv.url
