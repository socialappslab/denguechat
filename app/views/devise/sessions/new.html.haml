= render :partial => "shared/flashes"
= render :partial => "shared/form_errors", :locals => {:item => @user}

.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title.text-center
          = I18n.t("common_terms.login")
      .panel-body
        = form_for(@user, :url => user_session_path) do |f|
          = hidden_field_tag :return_to, params[:return_to]
          .form-group
            %p.form-label
              = I18n.t("activerecord.attributes.user.username")
            = f.text_field :username, :required => true, :autofocus => true,  :class => "form-control"
          .form-group
            %p.form-label
              = I18n.t("activerecord.attributes.user.password")
            = f.password_field :password, :class => "form-control"
          .form-group
            %br/
            = f.submit I18n.t("common_terms.login"), :class => "btn btn-success btn-lg btn-block"



  = stylesheet_link_tag "home"
