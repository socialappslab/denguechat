

/------------------------------------------------------------------------------

.row{:style => "margin-bottom: 20px;"}
  .col-md-10
    %h1{:style => "font-size: 40px; margin-bottom: 20px;"}
      = @neighborhood.name


- if @statistics.present?
  .row
    .col-md-9
      = render :partial => "shared/visit_statistics"

  .row
    .col-md-9
      = render :partial => "shared/location_statistics_graph"


  .chart-legend{:style => "margin-bottom: 40px;"}
    %div{:style => "width: 10px; height: 10px; background-color: #e74c3c; display: inline-block;"}
    = I18n.t('views.statistics.chart.percent_of_positive_sites')
    %br

    %div{:style => "width: 10px; height: 10px; background-color: #f1c40f; display: inline-block;"}
    = I18n.t('views.statistics.chart.percent_of_potential_sites')
    %br


    %div{:style => "width: 10px; height: 10px; background-color: #95a5a6; display: inline-block;"}
    = I18n.t('views.statistics.chart.percent_of_negative_sites')

    %br

    %div{:style => "width: 10px; height: 10px; background-color: #2ecc71; display: inline-block;"}
    = I18n.t('views.statistics.chart.percent_of_green_sites')


.row{:style => "margin-bottom: 30px; margin-top: 20px;"}
  .col-md-5
    - if @total_points == 0
      - num_of_reports_color = "#d9534f";
    - else
      - num_of_reports_color = "#5cb85c";

    %h1{:style => "color: #{num_of_reports_color}; font-size: 50px; display: inline;"}
      = @total_points
    %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
      = I18n.t("activerecord.attributes.user.total_points", :count => @total_points)


  .col-md-4{:style => "text-align: right;"}
    - if @total_reports == 0
      - num_of_reports_color = "#d9534f";
    - else
      - num_of_reports_color = "#5cb85c";

    %h1{:style => "color: #{num_of_reports_color}; font-size: 50px; display: inline;"}
      = @total_reports
    %p{:style => "margin-top: 10px; display: inline; font-size: 15px;"}
      = I18n.t("dashboard.reports")

/------------------------------------------------------------------------------

- if @current_user && @users.include?(@current_user)
  .row{:style => "margin-top:40px;"}
    = render :partial => 'posts/new'

.row
  = render :partial => "shared/news_feed"

= render :partial => "shared/full_feed_button"

/------------------------------------------------------------------------------
