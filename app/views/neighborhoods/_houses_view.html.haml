.span11.offset1
  %ul#neighborhood_house_list
    - @houses.shuffle.each do |house|
      %li.neighborhood_house_photo_thumb.span3
        - if house.profile_photo_file_name.nil?
          = link_to image_tag("default_images/house_default_image.png"), neighborhood_house_path(@neighborhood, house)
        - else
          = link_to image_tag(house.profile_photo.url(:large)), neighborhood_house_path(@neighborhood, house)
        = link_to house.name, neighborhood_house_path(@neighborhood, house)
    - if @houses.count < 7
      - (9 - @houses.count).times do
        %li.neighborhood_house_photo_thumb.span3
          = image_tag("default_images/house_default_image.png")
          Futura casa
