
- @houses.shuffle.each do |house|
  .span3{:style => "margin-bottom: 3px;"}
    - if house.profile_photo_file_name.nil?
      = link_to image_tag("default_images/house_default_image.png", :style => "width: 50px; height: 50px;"), neighborhood_house_path(@neighborhood, house)
    - else
      = link_to image_tag(house.profile_photo.url(:small), :style => "width: 50px; height: 50px;"), neighborhood_house_path(@neighborhood, house)
    = link_to house.name, neighborhood_house_path(@neighborhood, house)
- if @houses.count < 7
  - (9 - @houses.count).times do
    .neighborhood_house_photo_thumb.span3
      = image_tag("default_images/house_default_image.png", :style => "width: 50px; height: 50px;")
      Futura casa
