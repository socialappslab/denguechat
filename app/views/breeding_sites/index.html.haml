= render :partial => "shared/flashes"

.row
  .span8.offset1
    %h1{:style => "font-size: 30px;"}
      = I18n.t("views.admin.edit_report")

.row{:style => "margin-top: 20px;"}
  .span16.offset1
    %table.table.table-bordered
      - @types.each do |type|
        %tr.info
          %td{:style => "font-weight: bold;"}
            = type.description
          %td


        - type.elimination_methods.order("created_at ASC").each do |method|
          %tr
            %td{style: "padding-left:40px;"}
              = method.description
            %td
              = method.points
