.feed-item-comment
  .feed-item-profile-photo
    %a{"ng-href" => "{{comment.user.url}}"}
      %img{"ng-src" => "{{comment.user.photo}}"}
  .feed-item-bar
    .username
      %a{"ng-href" => "{{comment.user.url}}"}
        {{comment.user.display_name}}
    .location
      %a{"ng-href" => "{{post.user.neighborhood.url}}"}
        %span.muted
          de
        {{comment.user.neighborhood.geographical_display_name}}
    .feed-item-timestamp
      {{comment.timestamp}}
