var locationListCtrl = function ($scope, $http, $attrs) {
  $scope.loading     = true;
  $scope.serverError = false;

  var ajax   = $http({url: "/api/v0/locations.json", method: "GET", params: {"neighborhood_id": 5}});

  ajax.success(function(data) {
    $scope.loading = true;
    $scope.locations = data.locations;
    console.log($scope.locations)
  });
  ajax.error(function(response) {
    $scope.serverError = true;
    $scope.loading     = false;
  });
  ajax.then(function(response) {
    $scope.serverError = false;
    $scope.loading     = false;
  });
};


// We use inline annotation to declare services in order to bypass
// errors when JS gets minified:
// https://docs.angularjs.org/tutorial/step_05
var app = angular.module('dengueChatApp');
app.controller("locationListCtrl", ["$scope", "$http", "$attrs", locationListCtrl]);
